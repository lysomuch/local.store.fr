                    <block class="Mageplaza\Affiliate\Block\Account\Home\Transaction" name="credit_transaction" template="Mageplaza_Affiliate::account/home/transactions.phtml"/>
                </container>
            </block>
        </referenceContainer>

    </body>
</page>
